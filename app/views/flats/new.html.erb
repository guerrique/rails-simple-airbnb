<div>Add a new flat</div>

<%#= render 'form', restaurant: @restaurant %>

<%= simple_form_for(@flat) do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :description %>
<%= f.input :price_per_night %>
<%= f.input :number_of_guests %>

<%= f.submit 'Create', class: 'btn btn-primary' %>
<%= link_to 'cancel', flats_path, class: 'btn btn-default'  %>
<% end %>
